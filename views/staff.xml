<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Search View -->
    <record id="view_hospital_staff_search" model="ir.ui.view">
        <field name="name">hospital.staff.search</field>
        <field name="model">hospital.staff</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Staff Name"/>
                <field name="phone_number" string="Phone Number"/>
                <field name="role" string="Role"/>
                <field name="department_id" string="Department"/>
                <field name="state" string="Status"/>
                <filter name="filter_draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="filter_active" string="Active" domain="[('state', '=', 'active')]"/>
                <filter name="filter_on_leave" string="On Leave" domain="[('state', '=', 'on_leave')]"/>
                <filter name="filter_terminated" string="Terminated" domain="[('state', '=', 'terminated')]"/>
                <separator/>
                <filter name="filter_nurse" string="Nurses" domain="[('role', '=', 'nurse')]"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_role" string="Role" domain="[]" context="{'group_by': 'role'}"/>
                    <filter name="group_by_department" string="Department" domain="[]"
                            context="{'group_by': 'department_id'}"/>
                    <filter name="group_by_state" string="Status" domain="[]" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_staff_tree" model="ir.ui.view">
        <field name="name">hospital.staff.tree</field>
        <field name="model">hospital.staff</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="full_name"/>
                <field name="age"/>
                <field name="city"/>
                <field name="image" widget="image"/>
                <field name="department_id"/>
                <field name="address"/>
                <field name="degree"/>
                <field name="degree_type"/>
                <field name="phone_number"/>
                <field name="role"/>
                <field name="contract_type"/>
                <field name="hire_date"/>
                <field name="professional"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_staff_form" model="ir.ui.view">
        <field name="name">hospital.staff.form.view</field>
        <field name="model">hospital.staff</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,active,on_leave,terminated,retired"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Staff Name" required="1"/>
                        </h1>
                    </div>
                    <group string="Staff Information">
                        <group>
                            <field name="full_name"/>
                            <field name="age"/>
                            <field name="birth_date"/>
                            <field name="gender"/>
                            <field name="phone_number"/>
                            <field name="email" widget="email"/>
                        </group>
                        <group>
                            <field name="department_id"/>
                            <field name="address"/>
                            <field name="city"/>
                            <field name="degree"/>
                            <field name="degree_type"/>
                            <field name="professional"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Employment Details">
                            <group>
                                <field name="role"/>
                                <field name="contract_type"/>
                                <field name="hire_date"/>
                                <field name="years_experience" readonly="1"/>
                                <field name="salary"/>
                                <field name="work_schedule"/>
                            </group>
                        </page>
                        <page string="Assignments">
                            <group>
                                <field name="patient_ids" nolabel="1">
                                    <tree>
                                        <field name="name"/>
                                    </tree>
                                </field>
                                <field name="doctor_ids" nolabel="1">
                                    <tree>
                                        <field name="name"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_staff_kanban" model="ir.ui.view">
        <field name="name">hospital.staff.kanban</field>
        <field name="model">hospital.staff</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <div class="oe_kanban_image">
                                <field name="image" widget="image" options="{'size': [50, 50]}"/>
                            </div>
                            <div class="o_kanban_details">
                                <div>
                                    <strong>Name:</strong>
                                    <t t-esc="record.name.raw_value"/>
                                </div>
                                <div>
                                    <strong>Role:</strong>
                                    <t t-esc="record.role.raw_value"/>
                                </div>
                                <div>
                                    <strong>Phone:</strong>
                                    <t t-esc="record.phone_number.raw_value"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_staff" model="ir.actions.act_window">
        <field name="name">Staff</field>
        <field name="res_model">hospital.staff</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_hospital_staff_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Manage staff
            </p>
            <p>
                Create and manage staff records, including roles and departments.
            </p>
        </field>
    </record>

    <record id="action_nursing_staff" model="ir.actions.act_window">
        <field name="name">Nursing Staff</field>
        <field name="res_model">hospital.staff</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_hospital_staff_search"/>
        <field name="domain">[('role', '=', 'nurse')]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Manage nursing staff
            </p>
            <p>
                View and manage records for nursing staff.
            </p>
        </field>
    </record>

    <record id="action_admin_staff" model="ir.actions.act_window">
        <field name="name">Administrative Staff</field>
        <field name="res_model">hospital.staff</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_hospital_staff_search"/>
        <field name="domain">[('role', 'in', ['admin', 'receptionist'])]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Manage administrative staff
            </p>
            <p>
                View and manage records for administrative staff.
            </p>
        </field>
    </record>

    <record id="action_technical_staff" model="ir.actions.act_window">
        <field name="name">Technical Staff</field>
        <field name="res_model">hospital.staff</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_hospital_staff_search"/>
        <field name="domain">[('role', 'in', ['lab_technician', 'pharmacist'])]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Manage technical staff
            </p>
            <p>
                View and manage records for technical staff.
            </p>
        </field>
    </record>

    <record id="action_support_staff" model="ir.actions.act_window">
        <field name="name">Support Staff</field>
        <field name="res_model">hospital.staff</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_hospital_staff_search"/>
        <field name="domain">[('role', 'in', ['security', 'cleaner', 'maintenance'])]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Manage support staff
            </p>
            <p>
                View and manage records for support staff.
            </p>
        </field>
    </record>

    <record id="action_staff_reports" model="ir.actions.act_window">
        <field name="name">Staff Reports</field>
        <field name="res_model">hospital.staff</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_hospital_staff_search"/>
        <field name="context">{'search_default_group_by_role': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                View staff reports
            </p>
            <p>
                Analyze staff records grouped by role.
            </p>
        </field>
    </record>
</odoo>